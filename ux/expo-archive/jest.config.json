{
  "preset": "jest-expo",
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"],
  "testMatch": [
    "**/__tests__/**/*.(test|spec).(js|jsx|ts|tsx)"
  ],
  "collectCoverageFrom": [
    "api/**/*.{js,jsx,ts,tsx}",
    "components/**/*.{js,jsx,ts,tsx}",
    "!**/*.d.ts",
    "!**/node_modules/**",
    "!**/__tests__/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": ["babel-jest", { "presets": ["babel-preset-expo"] }]
  }
}
